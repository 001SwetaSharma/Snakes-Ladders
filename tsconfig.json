{
  "compilerOptions": {
    "target": "ES6",                       // Specify ECMAScript target version
    "module": "commonjs",                  // Specify module code generation
    "outDir": "./dist",                    // Redirect output to the dist folder
    "rootDir": "./src",                    // Root directory of TypeScript source
    "strict": true,                        // Enable all strict type-checking options
    "esModuleInterop": true,                // Enable ES module interop for compatibility with CommonJS modules
    "lib": ["ES2021"], // Exclude DOM types
    "types": ["node"]  // Only include Node.js types
  },
  "include": ["src/**/*"],                 // Specify input files
  "exclude": ["node_modules"]
}
